block variables
    - var keywords = 'Webpack Pug Sass Js jQ'
    - var description = 'test webpack project'
    - var pageTitle = 'test webpack'

doctype html
html(lang='en')
    head
        meta(charset="utf-8")
        meta(name="keywords" content=keywords)
        meta(name="description" content=description)
        title=pageTitle
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
    body        
        include ./blocks/range-a/range-a.pug
        include ./blocks/line/line.pug
        block content
            .container
                .container__title
                    h1 Range
                .container__range
                    +range-a({
                        value: 1,
                        text: '71,12 см',
                    })
                    +line